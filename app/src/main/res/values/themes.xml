<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zavaly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_varient</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_varient</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowAnimationStyle">@style/CustomTransition</item>
        <item name="colorControlActivated">@color/primary_varient</item>
    </style>

    <style name="CustomTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:radius">15dp</item>
        <item name="colorControlActivated">@color/primary_varient</item>
        <item name="android:textCursorDrawable">@color/primary_varient</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/primary_varient</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/accent_off_black</item>
        <item name="android:textColorHint">@color/accent_off_black</item>
        <item name="passwordToggleTint">@color/primary_varient</item>
        <item name="startIconTint">@null</item>
        <item name="endIconMode">@null</item>
    </style>


    <style name="TextInputDropDownLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:radius">15dp</item>
        <item name="colorControlActivated">@color/primary_varient</item>
        <item name="android:textCursorDrawable">@color/primary_varient</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/primary_varient</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/accent_off_black</item>
        <item name="android:textColorHint">@color/accent_off_black</item>
        <item name="passwordToggleTint">@color/primary_varient</item>
        <item name="startIconTint">@null</item>
        <item name="endIconMode">@null</item>
    </style>

    <style name="Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox." parent="">
        <item name="colorControlActivated">@color/primary_varient</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/primary_varient</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_varient</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>