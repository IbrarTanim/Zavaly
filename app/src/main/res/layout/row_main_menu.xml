<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/seven"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/seven"
    app:cardElevation="@dimen/seven"
    app:rippleColor="@color/primary_varient">

    <LinearLayout
        android:layout_width="@dimen/hundred"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/seven"
        android:layout_marginBottom="@dimen/seven"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_menu_image"
            android:layout_width="@dimen/fourty"
            android:layout_height="@dimen/fourty"
            android:layout_gravity="center" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="@color/primary_varient"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>