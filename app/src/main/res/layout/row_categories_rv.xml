<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/seven"
    app:cardCornerRadius="@dimen/twelve"
    app:cardElevation="@dimen/seven">

    <LinearLayout
        android:layout_width="@dimen/one_hundred"
        android:layout_height="@dimen/one_hundred_eighty"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row_category_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred"
            android:scaleType="centerCrop"
            android:src="@drawable/zavalylogo" />

        <TextView
            android:id="@+id/row_category_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="View Products"
            android:background="@color/logo_back_color_varient"
            android:layout_below="@+id/row_category_name_tv"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/three"/>-->

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>