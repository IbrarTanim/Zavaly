<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ten"
    android:background="@drawable/background_stroke"
    android:padding="@dimen/ten">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_shop_logo"
        android:layout_width="@dimen/seventy"
        android:layout_height="@dimen/seventy"
        android:src="@drawable/zavalylogo"
        app:civ_border_color="@color/primary_varient"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/row_shop_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_shop_name" />

    <TextView
        android:id="@+id/row_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:text="Rasel Shah"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_six_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/row_shop_logo"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/row_shop_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:text="Address"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/row_shop_logo"
        app:layout_constraintTop_toBottomOf="@+id/row_shop_name" />


    <TextView
        android:id="@+id/row_shop_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:text="01681723016"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/row_shop_logo"
        app:layout_constraintTop_toBottomOf="@+id/row_shop_address" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shop_live_chat"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:text="Start Live Chat"
        app:layout_constraintTop_toBottomOf="@+id/row_shop_contact" />

</androidx.constraintlayout.widget.ConstraintLayout>